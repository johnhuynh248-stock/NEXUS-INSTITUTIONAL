# ============================================
# RAILWAY DEPLOYMENT CONFIGURATION
# ============================================

# Required API Keys (Fill these with your actual keys)
TELEGRAM_BOT_TOKEN=your_actual_telegram_bot_token_here
TRADIER_API_KEY=your_actual_tradier_production_api_key
UNUSUAL_WHALES_API_KEY=your_actual_unusual_whales_api_key
TELEGRAM_ADMIN_CHAT_ID=your_actual_admin_chat_id

# Railway Auto-Managed
PORT=3000
NODE_ENV=production

# ============================================
# TELEGRAM BOT SETTINGS
# ============================================
TELEGRAM_POLLING=true
TELEGRAM_WEBHOOK_ENABLED=false

# ============================================
# API SETTINGS
# ============================================
TRADIER_BASE_URL=https://api.tradier.com/v1
UNUSUAL_WHALES_BASE_URL=https://api.unusualwhales.com/api
TRADIER_TIMEOUT_MS=15000
UNUSUAL_WHALES_TIMEOUT_MS=15000
TRADIER_RETRIES=2
UNUSUAL_WHALES_RETRIES=2

# ============================================
# APPLICATION SETTINGS
# ============================================
TIMEZONE=America/New_York
MAX_SYMBOLS_PER_REQUEST=3
SESSION_START=09:30
SESSION_END=16:00

# ============================================
# FEATURE FLAGS (Railway Optimized)
# ============================================
ENABLE_LIVE_BLOCKS=true
ENABLE_HISTORICAL=true
ENABLE_MULTI_SYMBOL=true
FEATURE_LIVE_BLOCK_DETECTION=true
FEATURE_GAMMA_ANALYSIS=true
FEATURE_SENTIMENT_ANALYSIS=true
FEATURE_ANOMALY_DETECTION=false
FEATURE_TRADE_SUGGESTIONS=false

# ============================================
# DATA VALIDATION
# ============================================
ATM_RANGE=0.02
MIN_NOTIONAL=100000
SAME_DAY_ONLY=true
MARKET_HOURS_ONLY=true
FLOW_BLOCK_THRESHOLD=1000000

# ============================================
# RATE LIMITING (Important for Railway)
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=3
RATE_LIMIT_BURST_LIMIT=5
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# PERFORMANCE OPTIMIZATION
# ============================================
CONCURRENT_REQUESTS=2
REQUEST_TIMEOUT=20000
CACHE_ENABLED=false  # Disable until Redis is configured

# ============================================
# LOGGING (Railway-friendly)
# ============================================
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false  # Railway logs to console

# ============================================
# SECURITY
# ============================================
CORS_ENABLED=false
